{
  "manifest_version": 2,
  "name": "GUS Markdown Format",
  "version": "1.0",

  "description": "Supports markdown text formatting in the GUS bug and user story details section",
  "icons": {
    "16": "icons/gusmd16.png",
    "48": "icons/gusmd48.png",
    "128": "icons/gusmd128.png"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": {
      "16": "icons/gusmd16.png",
      "24": "icons/gusmd24.png",
      "32": "icons/gusmd32.png"
    },
    "default_title": "GUS Markdown"
  },

  "author": "Salesforce",

  "permissions": [
    "tabs"
  ],

  "incognito": "split"
}
